{
  "name": "@sanity-labs/groq-lint",
  "version": "0.0.3",
  "description": "GROQ linting engine, rules, and CLI for Sanity Lint",
  "author": "Sanity.io <hello@sanity.io>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sanity-labs/sanity-lint.git",
    "directory": "packages/groq-lint"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.js",
      "require": "./dist/schema.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "groq-lint": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@sanity/codegen": "^5.1.0",
    "@sanity-labs/groq-wasm": "workspace:*",
    "@sanity-labs/lint-core": "workspace:*",
    "groq-js": "^1.14.0"
  },
  "devDependencies": {
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "sanity",
    "groq",
    "lint",
    "linter"
  ],
  "publishConfig": {
    "access": "public"
  }
}
